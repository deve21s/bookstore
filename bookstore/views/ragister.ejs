<%- include('partials/header.ejs') %>
<div id="signupbox" margin-top:50px" class="mainbox loginbox">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="panel-title">Sign Up</div>
            
        </div>
        <div class="panel-body">
            <form id="signupform" class="form-horizontal" action="/ragister" method="POST">
                <div id="signupalert" style="display:none" class="alert alert-danger">
                    <p>Error:</p>
                    <span></span>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-sm-3 col-xs-3 control-label">Email</label>
                    <div class="col-md-9 col-sm-9 col-xs-9">
                        <input type="text" class="form-control" name="ragister[email]" placeholder="Email Address" required="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-sm-3 col-xs-3 control-label">First Name</label>
                    <div class="col-md-9 col-sm-9 col-xs-9">
                        <input type="text" class="form-control" name="ragister[fName]" placeholder="First Name" required="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-sm-3 col-xs-3 control-label">Last Name</label>
                    <div class="col-md-9 col-sm-9 col-xs-9">
                        <input type="text" class="form-control" name="ragister[lName]" placeholder="Last Name" required="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-sm-3 col-xs-3 control-label">Gender</label>
                    <div class="col-md-9 col-sm-9 col-xs-9">
                        <label class="radio-inline">
                            <input type="radio" name="ragister[gender]" checked>male
                          </label>
                          <label class="radio-inline">
                            <input type="radio" name="ragister[gender]">female
                          </label>
                          <label class="radio-inline">
                            <input type="radio" name="ragister[gender]">other
                          </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-sm-3 col-xs-3 control-label">Phone</label>
                    <div class="col-md-9 col-sm-9 col-xs-9">
                        <input type="text" class="form-control" name="ragister[moblieNo]" placeholder="PhoneNo" required="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 col-sm-3 col-xs-3 control-label">Password</label>
                    <div class="col-md-9 col-sm-9 col-xs-9">
                        <input type="password" class="form-control" name="ragister[password]" placeholder="Password" required="">
                    </div>
                </div>
                <div class="form-group">
                    <!-- Button -->
                    <!-- <input type="button" value="submit" class="btn btn-info"> -->
                    <div class="signup-btn">
                        <button id="btn-signup" type="submit" class="btn btn-info align_center">
                            <i class="icon-hand-right"></i> &nbsp; Sign Up</button>
                    </div>
                </div>
                <div style="border-top: 1px solid #999; padding-top:20px" class="form-group">

                </div>
            </form>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs') %>